{
  "name": "bonfire",
  "version": "0.1.0",
  "private": true,
  "description": "Bonfire - An open-source TypeScript framework for building social party games",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint packages/*/src --ext .ts",
    "lint:fix": "eslint packages/*/src --ext .ts --fix",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\"",
    "clean": "rm -rf packages/*/dist packages/*/*.tsbuildinfo node_modules"
  },
  "keywords": [
    "party-games",
    "multiplayer",
    "framework",
    "socket.io",
    "react"
  ],
  "author": "Laith Assaf",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bonfire"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "esbuild": "^0.27.3"
  }
}
