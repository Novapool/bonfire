{
  "name": "@bonfire/client",
  "version": "0.1.0",
  "description": "React hooks and UI components for Bonfire",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "npx postcss ./src/styles/tailwind.css -o ./dist/styles.css",
    "dev": "npm run build:css -- --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "echo \"Linting coming soon\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "party-games",
    "framework",
    "client",
    "react",
    "hooks"
  ],
  "author": "Laith Assaf",
  "license": "MIT",
  "dependencies": {
    "@bonfire/core": "0.1.0",
    "socket.io-client": "^4.8.3",
    "tailwindcss": "^4.1.18"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.1",
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-onboarding": "^10.2.8",
    "@storybook/addon-vitest": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.0.0",
    "@vitest/browser": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "autoprefixer": "^10.4.24",
    "eslint-plugin-storybook": "^10.2.8",
    "jsdom": "^24.0.0",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "storybook": "^10.2.8",
    "vitest": "^2.1.0"
  }
}
