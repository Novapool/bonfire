{
  "rules": {
    ".read": false,
    ".write": false,
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true,
        "state": {
          ".validate": "newData.hasChildren()"
        },
        "metadata": {
          ".validate": "newData.hasChildren(['roomId', 'createdAt', 'lastActivity', 'hostId', 'playerCount', 'status', 'gameType'])"
        }
      }
    }
  }
}
