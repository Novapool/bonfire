{
  "name": "@bonfire/server",
  "version": "0.1.0",
  "description": "Server implementation for Bonfire with Socket.io and database adapters",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
