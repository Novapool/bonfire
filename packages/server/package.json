    "express": "^4.18.0",
    "firebase-admin": "^12.0.0",
    "socket.io": "^4.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@vitest/coverage-v8": "^2.1.0",
    "socket.io-client": "^4.8.3",
    "vitest": "^2.1.0"
  }
}
